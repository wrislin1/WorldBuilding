<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorldBuilding.World">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name" />
            <Label Text="{Binding Name}" />
            <Label Text="Description" />
            <Label Text="{Binding Description}" />
            
            <Button Text="Add Location" Clicked="AddLocationClicked" />
            <Button Text="Add Character" Clicked="AddCharacterClicked" />
            <Button Text="Add Lore" Clicked="AddLoreClicked" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>